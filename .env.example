# Nest Wallet Environment Variables
# Copy this file to .env and fill in your values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# Blockchain APIs
NEXT_PUBLIC_INFURA_API_KEY=your-infura-api-key-here
NEXT_PUBLIC_BLOCKCYPHER_TOKEN=your-blockcypher-token-here
NEXT_PUBLIC_ETHERSCAN_API_KEY=your-etherscan-api-key-here
NEXT_PUBLIC_COINGECKO_API_BASE=https://api.coingecko.com/api/v3

# Application Settings
NODE_ENV=development
PORT=3001
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_LOG_LEVEL=debug

# Note: For production and development environments, these values are managed by:
# - Helm values files (values-dev.yaml, values-prod.yaml)
# - AWS Secrets Manager for sensitive data
# - EKS deployment via GitHub Actions
